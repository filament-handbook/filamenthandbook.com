{
  "name": "boilerplate-tailwindcss-alpinejs",
  "version": "1.0.0",
  "scripts": {
    "uglify:copy-alpine": "uglifyjs ./node_modules/alpinejs/dist/module.esm.js -c -m -o ./public/js/module.esm.js",
    "build:scripts": "uglifyjs ./src/scripts/scripts.js -c -m -o ./public/js/scripts.min.js",
    "build:alpine": "uglifyjs ./src/scripts/alpine.js -c -m -o ./public/js/alpine.min.js",
    "dev:scripts": "uglifyjs ./src/scripts/scripts.js -b -o ./public/js/scripts.min.js",
    "dev:alpine": "uglifyjs ./src/scripts/alpine.js -b -o ./public/js/alpine.min.js",
    "build:css": "postcss ./src/styles.css -o ./public/css/styles.css",
    "watch": "onchange 'tailwind.config.js' './public/**/*.html' './src/**/*.css' -- npm run build:css",
    "dev": "npm run build:css && npm run dev:scripts && npm run uglify:copy-alpine && npm run dev:alpine",
    "build": "NODE_ENV=production postcss ./src/styles.css -o ./public/css/styles.css && npm run build:scripts && npm run uglify:copy-alpine && npm run build:alpine",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "AlpineJS",
    "TailwindCSS",
    "Tailwind",
    "static page",
    "landing page",
    "simple page",
    "boilerplate",
    "starter"
  ],
  "author": "Andreia Bohner",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.9",
    "autoprefixer": "^10.4.20",
    "cssnano": "^7.0.6",
    "postcss-cli": "^11.0.0",
    "tailwindcss": "^3.4.13",
    "uglify-js": "^3.19.3"
  },
  "dependencies": {
    "alpinejs": "^3.14.1",
    "onchange": "^7.1.0"
  }
}
